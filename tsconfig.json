{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "commonjs",
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "target": "es5",
    "lib": ["es5", "es6", "dom"],
    "types": ["webpack-env", "jest", "node", "@testing-library/jest-dom"],
  },
  "include": [ "./src/**/*"],
  "exclude": ["node_modules", "./src/**/__tests__/*"]
}
